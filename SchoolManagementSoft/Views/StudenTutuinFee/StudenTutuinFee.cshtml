            <td>
                @item.StudentUniqueeID
            </td>
            <td>@item.StudentName</td>
            <td>@item.ClassName</td>
            <td>
                @amonutConvert
            </td>
            <td>
                @item.FType
            </td>
            <td>
                @item.ReceivedBy
            </td>

            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.SlNo }) |*@
