@model SchoolManagementSoft.Models.EditUserViewModel
@{
    ViewBag.Title = "Edit user info";
}
<style>
    #form_bg {
        background-color: #c1c1c1;
        color: #000000;
        padding: 25px;
        border-radius: 15px;
    }
</style>
 
<hr />
<div class="">
    <div class="col-sm-8 offset-sm-2" id="form_bg">
        <div style="border:1px solid #e0e0e0;border-radius:15px;padding:25px;">
            @using (Html.BeginForm("Edit", "UsersAdmin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h4>Edit user</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-error" })

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "" })
                            <div class="">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                     <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "" })
                            <div class="">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "" })
                            <div class="">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                  
           
                <hr />
                
                <div class="form-group">
                    @Html.Label("Roles", new { @class = "control-label col-md-2" })
                    <span class="col-md-10">
                        @foreach (var item in Model.RolesList)
                        {
                            <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        }
                    </span>
                </div>
              
                 
                <hr />
                <div class="form-group">
                    <div class="">
                        <input type="submit" class="btn btn-dark" value="Save Changes" />
                        <a class="btn btn-danger" href="@Url.Action("Index","UsersAdmin")"> Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <hr />
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
