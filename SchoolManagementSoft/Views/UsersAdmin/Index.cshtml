@model IEnumerable<SchoolManagementSoft.Models.ApplicationUser>

@{
    ViewBag.Title = "User List";
}
<br />
<div class="card">
    <div class="card-header bg-dark text-light">
        <span>User List</span>
        <a class="pull-right" href="@Url.Action("Create","UsersAdmin")"> <i class="fa fa-user"></i> New User</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="" class="datatable table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (item.Email == "admin@mail.com")
                            {
                                <td>
                                    <div class="btn btn-sm btn-primary">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </div>
                                </td>
                                <td></td>
                                <td></td>
                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)

                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                            }

                            <td>
                                <a href="@Url.Action("Details", "UsersAdmin", new { id = item.Id })" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i> View </a>
                                <a href="@Url.Action("Edit", "UsersAdmin", new { id = item.Id })" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                                @*<a href="@Url.Action("Delete", "UsersAdmin", new { id = item.Id })" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> Delete </a>*@
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

